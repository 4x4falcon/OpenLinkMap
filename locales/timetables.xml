<translations>
	<translation>
		<name>De Lijn</name>
		<description>Timetables for public transport stops operated by "De Lijn" in Flanders/Belgium.</description>
		<match mode="and">
			<match mode="or">
				<tag k="highway" v="bus_stop"/>
		 		<tag k="public_transport" v="platform"/>
				<tag k="public_transport" v="stop_position"/>
			</match>
			<tag k="operator" v="(.*;|^)De Lijn(;.*|$)"/>
		</match>
		<find>
			<tag k="ref" v="([0-9]*)" match_id="stop_ref"/>
		</find>
		<output>
			<copy-all/>
			<tag from_match="stop_ref" k="timetable" v="http://mijnlijn.be/{0}"/>
		</output>
	</translation>
	<translation>
		<name>ÖBB</name>
		<description>Timetables for train stations operated by the Austrian Federal Railways "Österreichische Bundesbahnen (ÖBB)".</description>
		<match mode="and">
			<match mode="or">
				<tag k="railway" v="station"/>
		 		<tag k="railway" v="halt"/>
				<tag k="public_transport" v="stop_position"/>
				<tag k="railway" v="stop"/>
			</match>
			<tag k="operator" v="(.*;|^)ÖBB(;.*|$)"/>
		</match>
		<find>
			<tag k="uic_ref" v="([0-9]*)" match_id="uic_ref"/>
		</find>
		<output>
			<copy-all/>
			<tag from_match="uic_ref" k="timetable" v="http://fahrplan.oebb.at/bin/stboard.exe/dn?L=vs_liveticker&amp;boardType=dep&amp;tickerID=dep&amp;start=yes&amp;eqstops=true&amp;input={0}"/>
		</output>
	</translation>
	<translation>
		<name>Deutsche Bahn</name>
		<description>Timetables for train stations operated by the German Railway "Deutsche Bahn (DB)".</description>
		<match mode="and">
			<match mode="or">
				<tag k="railway" v="station"/>
		 		<tag k="railway" v="halt"/>
				<tag k="public_transport" v="stop_position"/>
				<tag k="railway" v="stop"/>
			</match>
			<match mode="or">
				<tag k="operator" v="(.*;|^)DB(;.*|$)"/>
				<tag k="operator" v="(.*;|^)DB AG(;.*|$)"/>
				<tag k="operator" v="(.*;|^)DB Netz AG(;.*|$)"/>
				<tag k="operator" v="(.*;|^)DB Station &amp; Service AG(;.*|$)"/>
				<tag k="operator" v="(.*;|^)DB Regio AG(;.*|$)"/>
				<tag k="operator" v="(.*;|^)DB Regio(;.*|$)"/>
			</match>
		</match>
		<find>
			<tag k="uic_ref" v="([0-9]*)" match_id="uic_ref"/>
		</find>
		<output>
			<copy-all/>
			<tag from_match="uic_ref" k="timetable" v="http://mobile.bahn.de/bin/mobil/bhftafel.exe/dox?country=DEU&amp;rt=1&amp;use_realtime_filter=1&amp;productsFilter=1111111111000000&amp;boardType=Abfahrt&amp;start=Suchen&amp;input={0}"/>
		</output>
	</translation>
</translations>
